.top-img{
  overflow: hidden;
  _zoom:1;
  padding:20px 0;
  .img-box:extend(.left){
    width:330px;
    margin-right:20px;
    padding:10px;
    border:1px #dedede solid;
    img{
      width:330px;
      height:330px;
      display: block;
    }
  }

  .text-box:extend(.left){
    width:568px;
    h3{
      font:20px/30px @font-style;
      padding:10px 0;
    }
    .row{
      overflow: hidden;
      _zoom:1;
      .tit:extend(.left){
        width:60px;
        text-align: right;
        margin-right:10px;
      }
      .text:extend(.left){
        width:498px;
        overflow: hidden;

      }
      padding:5px 0;
    }
  }

}