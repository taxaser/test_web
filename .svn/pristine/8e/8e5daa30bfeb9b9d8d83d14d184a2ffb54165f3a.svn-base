<%- include ../inc/top.ejs %>
<link rel="stylesheet" href="/static/www/css/page/products/detail.css">
<div class="inner-top">
    <div class="box">
    </div>
    <div class="lay-out">
        <h2>产品详情</h2>

        <div class="img"></div>
        <div class="bg"></div>
    </div>
</div>
<div class="content lay-out">
    <div class="content lay-out">

        <%- include ../inc/left.ejs %>
        <div class="arrow-content">
            <div class="top-img">
                <div class="img-box">
                    <img src="/uploads/<%= item.img_file %>/<%= item.poster[0] %>" alt=""/>
                </div>
                <div class="text-box">
                    <h3 class="name"><%= item.english_name %></h3>

                    <div class="row">
                        <div class="tit">Price:</div>
                        <div class="text">$129.99</div>
                    </div>
                    <div class="row">
                        <div class="tit">update:</div>
                        <div class="text">2016-10-01</div>
                    </div>
                    <div class="row">
                        <div class="tit">This item:</div>
                        <div class="text">Want it Saturday, Nov. 5? Order within 1 hr 15 mins and choose Two-Day Shipping at
                            checkout. Details
                            Ships from and sold by Amazon Digital Services LLC. Gift-wrap available.
                        </div>
                    </div>
                </div>
            </div>
            <div class="detail">
                <div class="title">Detail</div>
                <div class="box">
                    <%- item.english_detail %>
                </div>
            </div>
        </div>

    </div>

</div> <!-- contentEnd-->
<%- include ../inc/foot.ejs %>