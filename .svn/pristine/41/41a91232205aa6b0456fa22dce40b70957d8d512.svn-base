.index-banner{
  height:380px;
  overflow:hidden;
  position: relative;
  .box{
    height: 408px;
    border-bottom:4px #fff solid;
    overflow: hidden;
    position: relative;
    li a{
      height: 380px;
      display: block;
      overflow: hidden;
    }
  }
  .shadow{
    width:1000px;
    height: 26px;
    position: absolute;
    left: 0;
    top: 0;
    z-index:20;
  }
  .contrl{
    height: 26px;
    position: absolute;
    top:330px;

    ul{
      float: right;
      li{
        display: inline;
        position: relative;
        float: left;
        margin-left:5px;
        width:26px;
        height: 26px;
        a{
          width:26px;
          left: 0;
          top:0;
          position: absolute;
          height: 26px;
          display: block;
          background: #fff;
          border-radius: 10px;
          opacity: .5;
        }
        &.hover a{
          background: orange;
        }
      }
    }
  }
}
