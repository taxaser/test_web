.out-form{
  position: fixed;
  padding:25px;
  border:3px #4ca6dd solid;
  z-index: 999;
  width:630px;
  background: #fff;
  top:50%;
  left:50%;
  margin-top:-170px;
  margin-left:-315px;
  .closed{
    position: absolute;
    right:-48px;
    top:-3px;
    width:45px;
    height: 45px;
    background: #4ca6dd;
    cursor: pointer;
    a{
      background: url("@{bg_path}/icon.png") no-repeat;
      background-position: 0 -155px;
      width:24px;
      height: 24px;
      display: block;
      margin:10px 0 0 10px;
    }
  }

  h3{
    font:18px/30px 'å¾®è½¯é›…é»‘';
    color:#52a3d9;
  }
  h4{
    margin:10px 0;
  }
  .form-box{
    width:626px;
    border:2px #e9e9e9 solid;
    height: 213px;
    .text{
      height:30px;
      width:96%;
      line-height:30px;
      padding:0 2%;
      border-bottom:1px #dedede solid;
    }
    textarea{
      width:96%;
      border:0;
      resize: none;
      padding:0 2%;
      height: 50px;
      line-height:30px;
    }
    dt{
      height:29px;
      border-bottom:1px #e9e9f2 solid;
      line-height:29px;
      padding-left:15px;
      background: #f4f4f7;
      color:#333;
    }
    .important{
      textarea{
        height: 50px;
      }
      dt{
        color:#ff0000;
      }

    }
  }
  .out-submit{
    margin-top:10px;
    text-align: center;
    height: 49px;
    .bg-line{
      height: 2px;
      overflow: hidden;
    }
    .submit{
      width:175px;
      height: 47px;
      margin:0 auto;
      overflow: hidden;
      background: #f89f13;
      color:#fff;
      cursor: pointer;
    }
  }
}
