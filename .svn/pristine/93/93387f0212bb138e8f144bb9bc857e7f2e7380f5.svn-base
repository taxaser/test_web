@import "../bootstrap/base";
@import "../bootstrap/css3";
header{
  .gradient(#4fadf3,#418ce1);
  border-bottom: 1px @base-line-color solid;
  height: 51px;
  line-height: 29px;
  font:12px/29px SimSun,hiragino sans gb,microsoft yahei,serif;
  padding:0 10px;
  .user-name{
    color:#fff;
    margin:10px 10px 0 0;
    span.glyphicon{
      margin-right:5px;
    }
  }
  #quickBtn{
    margin-top:15px;
    .btn{
      border-top:1px #357dde solid;
      border-bottom:1px #54a8ee solid;
      border-right: 1px #4c9de9 solid;
      border-left:1px #357dde solid;
      background: #4391e5;
      color:#fff;
      height:20px;
      line-height:20px;
      &:first-child{
        border-top-left-radius: 3px;
        border-bottom-left-radius: 3px;
      }
      &:last-child{
        border-top-right-radius: 3px;
        border-bottom-right-radius: 3px;
      }

    }
  }
  #topSearch{
    margin-top:10px;
    width:300px;
    &.input-group{
      border-radius: 10px;
    }
    .btn{
      line-height: 16px;
      border-radius: 4px;
      border-bottom-left-radius: 0;
      border-top-left-radius:0 ;
    }
    .form-control{
      border-radius: 4px;
      border-bottom-right-radius: 0;
      border-top-right-radius:0 ;
    }
  }
  .words{
    margin:10px;
  }
  .left-btns{
    margin:10px 15px;
    border-radius: 4px;
  }
  a{
    color:#fff;
    &:hover{
      text-decoration: underline;
    }
  }
  h1{
    font:bold 25px/40px Helvetica,Arial,sans-serif;
    float:left;
    margin:5px 10px;
    color:#fff;
    padding-left:60px;
    span{
      margin-right:10px;
      font-size:23px;
    }
  }
}