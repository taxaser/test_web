.products{
  overflow: hidden;
}
.product-img{
  position: relative;
  height:250px;
  border-bottom:1px @border-color solid;
  margin-bottom:15px;
  ul.product-list{
    position: absolute;
    margin-left:-12px;
    li{
      float:left;
      display: inline;
      margin-right:12px;
      width:226px;
      height:250px;
      text-align: center;
      .name{
        font-size:15px;
        margin:10px 0;
        height:20px;
        overflow: hidden;
        a{
          color:@link-color;
          &:hover{
            color: @link-hover;
          }
        }
      }
      .text{
        text-align: center;
        height:40px;
        line-height:20px;
      }
      img{
        width:226px;
        height:142px;
        display: block;
      }
    }
  }
}